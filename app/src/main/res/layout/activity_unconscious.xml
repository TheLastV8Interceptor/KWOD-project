<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UnconsciousActivity">

    <TextView
        android:id="@+id/accident_activity_consciousness_title"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="71dp"
        android:layout_marginBottom="560dp"
        android:gravity="center"
        android:text="Wykonaj test oddechu"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/breath_check_image"
        app:layout_constraintTop_toBottomOf="@id/accident_activity_consciousness_title"
        app:layout_constraintBottom_toTopOf="@id/activity_unconscious_breath_check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.2"/>

    <Button
        android:id="@+id/activity_unconscious_breath_check"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:onClick="switch_to_Breath_check"
        android:text="ZakoÅ„czono test oddechu"
        app:backgroundTint="#FF9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>