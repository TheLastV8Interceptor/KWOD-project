<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IsBreathingActivity">


    <TextView
        android:id="@+id/accident_activity_unconscious_Is_Breathing_title"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="593dp"
        android:gravity="center"
        android:text="Dla nieprzytomnego i oddychającego pacjenta wykonaj poniższe instrukcje"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/accident_activity_unconscious_Is_Breathing_title"
        app:layout_constraintBottom_toTopOf="@id/isBreathingButtonLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/isBreathingFragment">
    </FrameLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/isBreathingFragment"
        app:layout_constraintBottom_toTopOf="@id/accident_activity_unconscious_Is_Breathing_EndHelpActivity_button"
        android:id="@+id/isBreathingButtonLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/isBreathingNextButton"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#424242"
            app:backgroundTint="#FF9800"
            android:text="Wstecz"
            android:id="@+id/isBreathingBackButton">
        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/isBreathingBackButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#424242"
            app:backgroundTint="#FF9800"
            android:text="Dalej"
            android:id="@+id/isBreathingNextButton">
        </Button>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/accident_activity_unconscious_Is_Breathing_EndHelpActivity_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="636dp"
        android:layout_marginBottom="45dp"
        android:onClick="switch_to_EndHelpActivity"
        android:text="Zakończ"
        android:textColor="#424242"
        app:backgroundTint="#FF9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
