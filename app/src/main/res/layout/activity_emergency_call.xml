<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmergencyCallActivity">

    <Button
        android:id="@+id/accident_activity_emergency_call_stayin_alive"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="292dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="364dp"
        android:onClick="switch_to_StayinAlive"
        android:text="Rozpocznij RKO dla dorosłego"
        android:textColor="#424242"
        app:backgroundTint="#FF9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/accident_activity_emergency_call_stayin_alive_small_child"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="376dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="280dp"
        android:onClick="switch_to_StayinAliveSmallChild"
        android:text="Rozpocznij RKO dla małego dziecka"
        android:textColor="#424242"
        app:backgroundTint="#FF9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/accident_activity_emergency_call_stayin_alive_toddler"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="460dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="196dp"
        android:onClick="switch_to_StayinAliveToddler"
        android:text="Rozpocznij RKO dla niemowlęcia"
        android:textColor="#424242"
        app:backgroundTint="#FF9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/accident_activity_unconscious_emergency_call_title"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="593dp"
        android:gravity="center"
        android:text="Wezwij karetkę, a następnie wybierz, dla kogo jest wykonywane RKO:"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>